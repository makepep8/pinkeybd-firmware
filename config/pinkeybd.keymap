#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define ZMK_POINTING_DEFAULT_SCRL_VAL 80

&lt { tapping-term-ms = <140>; };

/ {
    behaviors {
        rot_kp: sensor_rotate_kp {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        // |        /       |       ,       |       .       |      -        |      ;       |    ESC         |                   |           |       L      |       R       |       D       |       Y       |      P      |
        // |        A       |       O       |       E       |      I        |      U       |    SCROLLLOCK  |                   |           |       G      |       N       |       T       |       S       |      K      |
        // |        X       |       C       |       V       |      W        |      Q       |    TAB         |                   |     F     |       J      |       H       |       M       |       B       |      Z      |
        // |    L_SHIFT     |               |               |   LOWER / Jp  |    Space     |    LEFT_WIN    |                   |  R_SHIFT  |      ENTER   |  LOWER2 / Ja  |               |               |   FUN_L     |
        // ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

        default_layer {
            bindings = <
&kp Q             &kp W             &kp E        &kp R         &kp T      &kp ESC         &kp Y        &kp U             &kp I      &kp O              &kp P
&mt LEFT_SHIFT A  &mt LEFT_ALT S    &kp D        &kp F         &kp G      &kp SCROLLLOCK  &kp H        &kp J             &kp K      &mt RIGHT_SHIFT L  &kp BACKSPACE
&kp Z             &kp X             &kp C        &kp V         &kp B      &kp TAB         &kp N        &kp M             &kp COMMA  &kp PERIOD         &kp ENTER
&kp CAPS          &lt 2 LANGUAGE_5  &lt 1 SPACE  &kp LEFT_WIN  &mkp RCLK  &mkp LCLK       &lt 3 ENTER  &lt 4 LANGUAGE_5  &mo 5
            >;

            sensor-bindings = <&rot_kp PG_DN PG_UP>;
        };

        kigo_layer {
            bindings = <
&kp ESCAPE  &kp EXCLAMATION   &kp AT_SIGN        &kp HASH       &kp DOLLAR        &kp PERCENT  &kp CARET  &kp AMPERSAND  &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
&kp TAB     &kp LEFT_BRACE    &kp RIGHT_BRACE    &kp SEMICOLON  &kp COLON         &kp PLUS     &kp LEFT   &kp DOWN       &kp UP_ARROW  &kp RIGHT             &kp ENTER
&kp LCTRL   &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp LESS_THAN  &kp GREATER_THAN  &kp EQUAL    &none      &none          &kp COMMA     &kp PERIOD            &kp SLASH
&trans      &kp LEFT_ALT      &trans             &trans         &kp PRINTSCREEN   &trans       &trans     &trans         &trans
            >;
        };

        Lower_layer {
            bindings = <
&none       &none      &none      &none      &none      &kp PAUSE_BREAK  &none      &none  &none      &kp PAGE_UP    &kp DELETE
&kp LC(A)   &kp LS(S)  &none      &none      &none      &kp SCROLLLOCK   &none      &none  &none      &kp PAGE_DOWN  &kp ENTER
&kp LC(Z)   &kp LC(X)  &kp LC(C)  &kp LC(V)  &none      &kp TAB          &none      &none  &none      &none          &kp INS
&kp LSHIFT  &none      &kp SPACE  &kp LALT   &kp PSCRN  &kp RSHIFT       &kp ENTER  &none  &kp RCTRL
            >;
        };

        Num_layer {
            bindings = <
&kp N1      &kp N2      &kp N3      &kp N4      &kp N5      &kp ESC     &kp N6      &kp N7      &kp N8      &kp N9      &kp N0
&kp LS(N1)  &kp LS(N2)  &kp LS(N3)  &kp LS(N4)  &kp LS(N5)  &none       &kp RS(N6)  &kp RS(N7)  &kp RS(N8)  &kp RS(N9)  &kp RS(N0)
&kp F1      &kp F2      &kp F3      &kp F4      &kp F5      &kp TAB     &kp APOS    &kp EQUAL   &kp BSLH    &kp GRAVE   &kp INS
&mo 0       &mo 5       &kp SPACE   &kp LSHIFT  &kp F11     &kp RSHIFT  &kp ENTER   &none       &kp RSHIFT
            >;
        };

        Func_layer {
            bindings = <
&kp F1      &kp F2   &kp F3   &kp F4   &kp F5   &none  &kp F6   &kp F7   &kp F8      &kp F9   &kp F10
&kp F11     &kp F12  &kp F13  &kp F14  &kp F15  &none  &kp F16  &kp F17  &kp F18     &kp F19  &kp F20
&none       &none    &none    &none    &none    &none  &none    &none    &none       &none    &none
&kp LSHIFT  &none    &none    &none    &none    &none  &none    &none    &kp RSHIFT
            >;
        };

        Bt_layer {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &bt BT_SEL 5  &none  &none       &none  &bt BT_CLR  &bt BT_CLR_ALL
&none         &none         &none         &none         &none         &none         &none  &bt BT_PRV  &none  &bt BT_NXT  &none
&none         &none         &none         &none         &none         &none         &none  &none       &none  &none       &none
&none         &none         &none         &none         &none         &none         &none  &none       &none
            >;
        };
    };
};
